{
    "name": "@SplittermondFoundry/splittermond",
    "version": "13.6.9",
    "description": "A system for playing the german pen and paper RPG Splittermond.",
    "main": "src/splittermond.js",
    "type": "module",
    "engines": {
        "node": ">=24.3.0"
    },
    "scripts": {
        "compileCss": "gulp less",
        "dev": "vite serve --config config/vite.config.mts",
        "typecheck": "tsc",
        "test": "npm run typecheck && mocha --config config/mocharc.json src/__tests__/unit",
        "build": "npm run test && vite build --config config/vite.config.mts --mode PROD",
        "ci-build": "vite build --config config/vite.config.mts --mode CI",
        "format": "prettier --write . --config config/prettierrc.ts --ignore-path config/prettierignore",
        "format:check": "prettier --check . --config config/prettierrc.ts --ignore-path config/prettierignore"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SplittermondFoundry/Splittermond.git"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com",
        "access": "public"
    },
    "files": [
        "dist",
        "README.md",
        "FoundryModul1.png",
        "screenshots"
    ],
    "author": "simon",
    "license": "ISC",
    "homepage": "https://bitbucket.org/rpgframework-cloud/splittermond-fvtt#readme",
    "devDependencies": {
        "@ethaks/fvtt-quench": "^0.10.0",
        "@foundryvtt/foundryvtt-cli": "^3.0.0",
        "@tsconfig/node20": "^20.1.4",
        "@types/chai": "^5.0.0",
        "@types/gulp": "^4.0.17",
        "@types/gulp-less": "^0.0.36",
        "@types/jquery": "^3.5.30",
        "@types/jsdom": "^27.0.0",
        "@types/mocha": "^10.0.7",
        "@types/sinon": "^17.0.3",
        "chai": "^6.0.0",
        "handlebars": "^4.7.8",
        "jquery": "^3.7.1",
        "jsdom": "^27.0.0",
        "less": "^4.2.0",
        "mocha": "^11.0.0",
        "sinon": "^21.0.0",
        "tsx": "^4.17.0",
        "typescript": "^5.6.3",
        "vite": "^7.0.0",
        "prettier": "^3.0.0"
    }
}
