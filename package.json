{
  "name": "splittermond",
  "version": "1.0.0",
  "description": "A system for playing the german pen and paper RPG Splittermond.",
  "main": "src/splittermond.js",
  "type": "module",
  "scripts": {
    "compileCss": "gulp less",
    "dev": "vite serve --config config/vite.config.mts",
    "typecheck": "tsc -p config/tsconfig.test.json --noEmit",
    "test": "npm run typecheck && tsc -p config/tsconfig.test.json && mocha --config config/mocharc.json",
    "build": "tsc -p config/tsconfig.build.json && npm run test && vite build --config config/vite.config.mts && npm run compileCss"
  },
  "repository": {
    "type": "git",
    "url": "git+https://bitbucket.org/rpgframework-cloud/splittermond-fvtt.git"
  },
  "author": "simon",
  "license": "ISC",
  "homepage": "https://bitbucket.org/rpgframework-cloud/splittermond-fvtt#readme",
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "chai": "^5.0.0",
    "gulp": "^4.0.2",
    "gulp-less": "^4.0.1",
    "handlebars": "^4.7.8",
    "jquery": "^3.7.1",
    "jsdom": "^23.2.0",
    "mocha": "^10.2.0",
    "sinon": "^17.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.17.0",
    "typescript": "^5.5.3",
    "vite": "^5.4.0"
  },
  "dependencies": {
    "@types/sinon": "^17.0.3"
  }
}
