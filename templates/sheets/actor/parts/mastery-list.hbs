<div class="list masteries" data-item-type="mastery">
    <div class="list-header">
        <h3>{{localize "splittermond.masteries"}}</h3>
        <div class="actions">
            <button class="button-inline" type="button" data-action="add-item" data-render-sheet="true">
                <i class="fa fa-plus-square" aria-hidden="true"></i>
            </button>
        </div>
    </div>
    <ol class="mastery-list">
        {{#each masteriesBySkill}}
        <li data-skill="{{@key}}"><label>{{localize this.label}}</label>
            <ol class="taglist">
                {{#each this.masteries}}
                <li class="draggable" class="tooltip-activator" data-item-id="{{this._id}}">
                    <div class="name"><a class="tooltip-activator" data-action="edit-item">{{this.name}}</a>
                        <div class="tooltip">{{{this.data.description}}}</div>
                    </div>

                    <div class="actions">
                        <button class="button-inline" type="button" data-action="delete-item">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </div>
                </li>
                {{/each}}
                <li class="actions">
                    <button class="button-inline" type="button" data-action="add-item" data-render-sheet="true">
                        <i class="fa fa-plus-square" aria-hidden="true"></i>
                    </button>
                </li>
            </ol>
        </li>
        {{/each}}
    </ol>

</div>