<form class="{{cssClass}}" autocomplete="off">
    <nav class="sheet-navigation" data-group="primary">
        <a class="sheet-navigation-item active" data-tab="spell">{{ localize "splittermond.spells" }}</a>
        <a class="sheet-navigation-item" data-tab="mastery">{{ localize "splittermond.masteries" }}</a>
        <a class="sheet-navigation-item" data-tab="weapon">{{ localize "splittermond.weapon" }}</a>

    </nav>
    <main>
        <section class="tab" data-group="primary" data-tab="spell">
            <div class="filter column">
                <div class="row flex-gap"><i class="fas fa-search"></i><input type="text" placeholder="Suche" name="search">
                    <input type="checkbox" value="true" name="show-world-items-spell" id="show-world-items-spell"><label
                        for="show-world-items-spell">{{localize "splittermond.showWorldItems"}}</label>
                </div>
                <div class="row">
                    <select name="skill">
                        {{selectOptions spellFilter.skills selected="none" localize=true}}
                    </select>
                    <label>{{localize "splittermond.spellLevel"}}</label>
                    <input type="checkbox" value="true" name="skill-level-spell" id="skill-level-spell-0"><label
                        for="skill-level-spell-0"> 0</label>
                    <input type="checkbox" value="true" name="skill-level-spell" id="skill-level-spell-1"><label
                        for="skill-level-spell-1">1</label>
                    <input type="checkbox" value="true" name="skill-level-spell" id="skill-level-spell-2"><label
                        for="skill-level-spell-2"> 2</label>
                    <input type="checkbox" value="true" name="skill-level-spell" id="skill-level-spell-3"><label
                        for="skill-level-spell-3"> 3</label>
                    <input type="checkbox" value="true" name="skill-level-spell" id="skill-level-spell-4"><label
                        for="skill-level-spell-4"> 4</label>
                    <input type="checkbox" value="true" name="skill-level-spell" id="skill-level-spell-5"><label
                        for="skill-level-spell-5"> 5</label>
                </div>
            </div>
            <div class="list">
                <ol class="list-body">
                    {{#each items.spell}}
                    <li class="list-item draggable" data-item-id="{{this.uuid}}"
                        data-available-in="{{this.system.availableIn}}" data-skill="{{this.system.skill}}"
                        data-skill-level="this.system.skillLevel">
                        <div><label>{{this.name}}</label>
                            <div class="available-in">
                                <ul class="taglist">
                                    {{#each this.availableInList}}
                                    <li class="taglist-item">
                                        <div class="taglist-item-name">{{this.label}}</div></li>
                                    {{/each}}
                                </ul>
                            </div>
                        </div>
                        <div class="compendium">
                            {{#if this.compendium}}
                            <span class="label">{{this.compendium.metadata.label}}</span>
                            <span class="id">{{this.compendium.metadata.id}}</span></span>
                            {{else}}
                            <span class="label">{{this.collection.name}}</span>
                            <span class="id">world.{{this.collectionName}}</span></span>
                            {{/if}}
                        </div>

                    </li>
                    {{/each}}
                </ol>
            </div>
        </section>
        <section class="tab" data-group="primary" data-tab="mastery">
            <div class="filter column">
                <div class="row flex-gap"><i class="fas fa-search"></i><input type="text" placeholder="Suche" name="search">

                    <input type="checkbox" value="true" name="show-world-items-mastery" id="show-world-items-mastery"><label
                        for="show-world-items-mastery">{{localize "splittermond.showWorldItems"}}</label>
                </div>
                <div class="row">
                    <select name="skill">
                        {{selectOptions masteryFilter.skills selected="none" localize=true}}
                    </select>
                    <label>{{localize "splittermond.masteryItem.level"}}</label>
                    <input type="checkbox" value="true" name="skill-level-mastery" id="skill-level-mastery-1"><label
                        for="skill-level-mastery-1">1</label>
                    <input type="checkbox" value="true" name="skill-level-mastery" id="skill-level-mastery-2"><label
                        for="skill-level-mastery-2"> 2</label>
                    <input type="checkbox" value="true" name="skill-level-mastery" id="skill-level-mastery-3"><label
                        for="skill-level-mastery-3"> 3</label>
                    <input type="checkbox" value="true" name="skill-level-mastery" id="skill-level-mastery-4"><label
                        for="skill-level-mastery-4"> 4</label>
                </div>
            </div>
            <div class="list">
                <ol class="list-body">
                    {{#each items.mastery}}
                    <li class="list-item draggable" data-item-id="{{this.uuid}}"
                        data-available-in="{{this.system.availableIn}}" data-skill="{{this.system.skill}}"
                        data-level="{{this.system.level}}">
                        <div><label>{{this.name}}</label>
                            <div class="available-in">
                                <ul class="taglist">
                                    {{#each this.system.availableInArray}}
                                    <li class="taglist-item">
                                        <div class="taglist-item-name">{{this}}</div></li>
                                    {{/each}}
                                </ul>
                            </div>
                        </div>
                        <div class="level">
                            {{localize "splittermond.masteryItem.level"}}&nbsp;{{this.system.level}}
                        </div>
                        <div class="compendium">
                            {{#if this.compendium}}
                            <span class="label">{{this.compendium.metadata.label}}</span>
                            <span class="id">{{this.compendium.metadata.id}}</span></span>
                            {{else}}
                            <span class="label">{{this.collection.name}}</span>
                            <span class="id">world.{{this.collectionName}}</span></span>
                            {{/if}}
                        </div>

                    </li>
                    {{/each}}
                </ol>
            </div>
        </section>
        <section class="tab" data-group="primary" data-tab="weapon">
            <div class="filter column">
                <div class="row flex-gap"><i class="fas fa-search"></i><input type="text" placeholder="Suche" name="search">

                    <input type="checkbox" value="true" name="show-world-items-weapon" id="show-world-items-weapon"><label
                        for="show-world-items-weapon">{{localize "splittermond.showWorldItems"}}</label>
                    <select name="skill">
                        {{selectOptions weaponFilter.skills selected="none" localize=true}}
                    </select>
                </div>
            </div>
            <div class="list">
                <ol class="list-body">
                    {{#each items.weapon}}
                    <li class="list-item draggable" data-item-id="{{this.uuid}}"
                        data-skill="{{this.system.skill}}" data-secondary-skill="{{this.system.secondaryAttack.skill}}"
                        data-features="{{this.system.features}}" data-damage="{{this.system.damage}}"
                        data-secondary-damage="{{this.system.secondaryAttack.damage}}"
                        data-secondary-features="{{this.system.secondaryAttack.features}}">
                        <div>
                            <label>{{this.name}}</label>
                            <div class="features">{{this.system.features}}</div>
                        </div>
                        <div class="skill">
                            {{this.system.skillLabel}}
                        </div>
                        <div class="damage">
                            {{this.system.damage}}
                        </div>
                        <div class="compendium">
                            {{#if this.compendium}}
                            <span class="label">{{this.compendium.metadata.label}}</span>
                            <span class="id">{{this.compendium.metadata.id}}</span></span>
                            {{else}}
                            <span class="label">{{this.collection.name}}</span>
                            <span class="id">world.{{this.collectionName}}</span></span>
                            {{/if}}
                        </div>
                    </li>
                    {{/each}}
                </ol>
            </div>
        </section>
    </main>
</form>