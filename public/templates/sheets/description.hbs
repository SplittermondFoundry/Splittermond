<section class="tab {{tabs.description.id}} {{tabs.description.cssClass}}" data-group="primary" data-tab="description">
    {{#if editable}}
        <prose-mirror
                name="system.description"
                button="true"
                editable="{{editable}}"
                toggled="false"
                value="{{item.system.description}}">
            {{{description}}}
        </prose-mirror>
    {{else}}
        {{{description}}}
    {{/if}}
</section>