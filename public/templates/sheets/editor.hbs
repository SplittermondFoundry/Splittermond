<section class="tab {{tabs.editor.id}} {{tabs.editor.cssClass}}" data-group="primary" data-tab="editor">
    {{#if editable}}
        <prose-mirror
                name="{{editor.target}}"
                button="true"
                editable="{{editable}}"
                toggled="false"
                value="{{editor.value}}">
            {{{editor.content}}}
        </prose-mirror>
    {{else}}
        {{{editor.content}}}
    {{/if}}
</section>