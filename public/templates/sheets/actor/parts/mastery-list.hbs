<div class="list masteries" data-item-type="mastery">
    <div class="list-header">
        <h3>{{localize "splittermond.masteries"}}</h3>
        <div class="list-actions">
            <button class="button-inline" type="button" data-action="add-item" data-render-sheet="true">
                <i class="fa fa-plus-square" aria-hidden="true"></i>
            </button>
        </div>
    </div>
    <ol class="list-body">
        {{#with masteriesBySkill.none}}
            {{>"systems/splittermond/templates/sheets/actor/parts/mastery-by-skill.hbs" skillId="none" skill=this editable=../../editable}}
        {{/with}}

        {{#each generalSkills}}
            {{#with (lookup ../masteriesBySkill @key)}}
                {{>"systems/splittermond/templates/sheets/actor/parts/mastery-by-skill.hbs" skillId=@key skill=this editable=../../editable}}
            {{/with}}
        {{/each}}

        {{#each fightingSkills}}
            {{#with (lookup ../masteriesBySkill @key)}}
                {{>"systems/splittermond/templates/sheets/actor/parts/mastery-by-skill.hbs" skillId=@key skill=this editable=../../editable}}
            {{/with}}
        {{/each}}

        {{#each magicSkills}}
            {{#with (lookup ../masteriesBySkill @key)}}
                {{>"systems/splittermond/templates/sheets/actor/parts/mastery-by-skill.hbs" skillId=@key skill=this editable=../../editable}}
            {{/with}}
        {{/each}}
    </ol>

</div>