<div class="list active-defense" style="margin: 3px;" data-roll-type="activeDefense">
    <div class="list-header">
        <div>{{localize "splittermond.derivedAttribute.defense.long"}}</div>
        <div class="value">{{localize "splittermond.skillValueAbbrev"}}</div>
        <div class="features">{{localize
            "splittermond.features"}}
        </div>
    </div>
    <ol class="list-body" data-defense-type="defense">
        {{#each activeDefense}}
            <li class="list-item" data-action="rollDefense" data-defense-id="{{this.id}}">
            {{#if this.img}}
            <img width="32" height="32" src="{{{this.img}}}">
            {{/if}}
            <label>
                <a class="rollable" data-action="roll-active-defense">{{localize this.name}}</a>
            </label>
            <div class="value">{{this.skill.value}}</div>
            <div class="features" title="{{this.features}}">{{this.features}}</div>
        </li>
        {{/each}}
    </ol>
</div>