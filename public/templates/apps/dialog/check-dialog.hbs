<form>
    <div class="row" style="align-items: center; gap: 1em">
        <div class="character-image">
            <img src="{{skill.actor.img}}" data-edit="img" title="{{skill.actor.name}}" height="48" width="48"
                 class="profile-img"/>
        </div>
        <div class="character-name">
            {{skill.actor.name}}
        </div>
    </div>
    <div class="skill">
        {{skill.label}}
        <div class="tooltip-part">
            {{{skillTooltip}}}
        </div>
    </div>
    <div class="properties-editor">
        <label>{{localize "splittermond.modifier"}}</label>
        <div class="row">
            <button class="button-inline" type="button" data-action="dec-value"
                    data-input-query="input[name='modifier']">
                <i class="fa fa-minus" aria-hidden="true"></i></button>
            <input name="modifier" value="{{modifier}}" type="number">
            <button class="button-inline" type="button" data-action="inc-value"
                    data-input-query="input[name='modifier']">
                <i class="fa fa-plus" aria-hidden="true"></i></button>
        </div>
        {{#if emphasis}}
            <label></label>
            <ul class="checkbox-list">
                {{#each emphasis}}
                    <li>
                        <input type="checkbox" name="emphasis" data-name="{{this.name}}" id="emphasis_{{@index}}"
                               value="{{this.value}}" {{#if this.active}}checked{{/if}}>
                        <label for="emphasis_{{@index}}">
                            <i class="fa-solid fa-plus icon" data-name="unchecked"></i>
                            <i class="fa-check fa-solid icon" data-name="checked"></i>
                            {{this.label}}
                        </label>
                    </li>
                {{/each}}
            </ul>
        {{/if}}
        <label>{{localize "splittermond.difficulty"}}</label>
        <div class="row">
            <button class="button-inline" type="button" data-action="dec-value-3"
                    data-input-query="input[name='difficulty']">
                -3
            </button>
            <button class="button-inline" type="button" data-action="dec-value"
                    data-input-query="input[name='difficulty']">
                <i class="fa fa-minus" aria-hidden="true"></i></button>
            <input name="difficulty" value="{{difficulty}}" type="text">
            <button class="button-inline" type="button" data-action="inc-value"
                    data-input-query="input[name='difficulty']">
                <i class="fa fa-plus" aria-hidden="true"></i></button>
            <button class="button-inline" type="button" data-action="inc-value-3"
                    data-input-query="input[name='difficulty']">
                +3
            </button>
        </div>
        <label></label>
        <div class="row">
            <button class="button" type="button" data-action="difficulty-vtd">
                VTD
            </button>
            <button class="button" type="button" data-action="difficulty-kw">
                KW
            </button>
            <button class="button" type="button" data-action="difficulty-gw">
                GW
            </button>
        </div>
        {{#if skill.maneuvers}}
            <label>{{localize "splittermond.maneuvers"}}</label>
            <div class="row">
                <ul class="checkbox-list">
                    {{#each skill.maneuvers}}
                        <li>
                            <input type="checkbox" name="maneuvers" data-name="{{this.name}}" id="maneuver_{{@index}}"
                                   value="{{@index}}">
                            <label for="maneuver_{{@index}}">
                                <i class="fa-solid fa-plus icon" data-name="unchecked"></i>
                                <i class="fa-check fa-solid icon" data-name="checked"></i>
                                {{this.name}}
                            </label>
                        </li>
                    {{/each}}
                </ul>
            </div>
        {{/if}}

        <label>{{localize "splittermond.rollMode"}}</label>
        <select name="rollMode">
            {{#select rollMode}}
                {{#each rollModes as |propertyValue propertyKey|}}
                    <option value="{{propertyKey}}">{{localize propertyValue.label}}</option>
                {{/each}}
            {{/select}}
        </select>
    </div>
</form>