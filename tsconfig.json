{
  "extends": "@tsconfig/node20",
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "module/",
    "paths": {
      "js": ["../module/*"],
      "templates": ["../templates/*"],
      "config" : ["../config.js"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
  },
  "include": ["./src/**/*.ts"]
}
